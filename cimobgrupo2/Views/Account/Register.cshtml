@model RegisterViewModel

@{
    Layout = "~/Views/Shared/_LayoutAutenticacao.cshtml";
}

<form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
    <div class="form-group">
        <input type="text" asp-for="Nome" placeholder="Nome Completo" class="form-control">
    </div>
    <div class="form-group">
        <input type="text" asp-for="DataNascimento" placeholder="Data de Nascimento" class="form-control" id="datanascimentopicker">
    </div>
    <div class="form-group">
        <input type="text" asp-for="Email" placeholder="Email" class="form-control">
    </div>
    <div class="form-group">
        <input type="text" asp-for="Contato" placeholder="Contato" class="form-control">
    </div>

    <br />
    <div class="form-group">
        <input type="text" asp-for="Username" id="username" placeholder="Username" class="form-control username">
    </div>
    <div class="form-group">
        <input type="password" asp-for="Password" id="password" placeholder="Password" class="form-control password">
    </div>
    <div class="form-group">
        <input type="password" asp-for="ConfirmPassword" id="password" placeholder="Confirmar Password" class="form-control password">
    </div>
    <div class="form-group">
        <button type="submit">Registar</button>
    </div>
</form>
<div class="form-group">
    <button onclick="location.href='@Url.Action("Login", "Account")'">Cancelar</button>
</div>

<script type="text/javascript">
    $(function () {
        $('#datanascimentopicker').datepicker();
    });
</script>
