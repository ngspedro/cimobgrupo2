@model ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutAutenticacao.cshtml";
}

<h3>Recuperação de Password</h3>
<p>Preencha o formulário para definir a sua nova password.</p>
<br />
        <form method="post">
            <input asp-for="Code" type="hidden" />
            <input asp-for="UserId" type="hidden" />
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control password" placeholder="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control password" placeholder="password"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit">Confirmar</button>
        </form>