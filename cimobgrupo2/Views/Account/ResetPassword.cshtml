@model ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_LayoutAutenticacao.cshtml";
    ViewData["Topo"] = "Recuperar Password";
}

        <form method="post">
            <input asp-for="Code" type="hidden" />
            <input asp-for="UserId" type="hidden" />
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control password" placeholder="password" id="Password" data-toggle="tooltip" data-placement-md="right" data-placement-xs="top" title="@ViewData["Password"]"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control password" placeholder="password" id="ConfirmarPassword" data-toggle="tooltip" data-placement-md="right" data-placement-xs="top" title="@ViewData["ConfirmarPassword"]"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit">Confirmar</button>
        </form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}