@model cimobgrupo2.Models.Curso

<form class="form-horizontal" role="form" asp-action="RemoverCurso" method="POST" id="removerCursoForm">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Remover Curso</h4>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="CursoId" />
        <div class="form-group animated fadeIn">
            <div class="col-md-12 col-lg-12">
                <label class="text-center">Tem a certeza que pretende remover este curso?</label>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
        <button id="btnConfirmar" type="submit" class="btn btn-primary">Confirmar</button>
    </div>
</form>
