@model cimobgrupo2.Models.Entrevista
@{
    ViewData["Titulo"] = "Marcar a Entrevista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_ResultMessage")
    <!--div asp-validation-summary="ModelOnly" class="text-danger"-->  
<fieldset>
    <legend>Marcar</legend>
    <div class="col-md-4 col-lg-4 left-info">

        <form asp-controller="Entrevistas" asp-action="MarcarEntrevista" method="post" enctype="multipart/form-data" id="btnConfirmar">
            <div class="col-md-12 col-lg-12">
                <div class="form-group">
                    <label asp-for="Candidatura.User" class="control-label"></label>:
                    <select typeof="text" asp-for="Candidatura.User.Nome" class="form-control"
                            asp-items="@(new SelectList( ViewBag.ListOfUsers))"></select>
                    <span asp-validation-for="Candidatura.User.Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Candidatura.Programa" class="control-label"></label>:
                    <select typeof="text" asp-for="Candidatura.Programa.Nome" class="form-control"
                            asp-items="@(new SelectList(ViewBag.ListaProgramas))"></select>
                    <span asp-validation-for="Candidatura.Programa.Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Estado" class="control-label"></label>:
                    <select typeof="text" asp-for="Estado.Nome" class="form-control"
                            asp-items="@(new SelectList(ViewBag.ListaEstados))"></select>
                    <span asp-validation-for="Estado.Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataEntrevista"></label>
                    <input type="date" asp-for="DataEntrevista" placeholder="Data da Entrevista" class="form-control" id="DataEntrevista" data-toggle="tooltip" data-placement-md="right" data-placement-xs="top" title="@ViewData["DataEntrevista"]" data-html="true">
                    <span asp-validation-for="DataEntrevista" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HoraEntrevista"></label>
                    <input type="time" asp-for="HoraEntrevista" placeholder="Hora da Entrevista" class="form-control" id="DataEntrevista" data-toggle="tooltip" data-placement-md="right" data-placement-xs="top" title="@ViewData["HoraEntrevista"]" data-html="true">
                    <span asp-validation-for="HoraEntrevista" class="text-danger"></span>
                </div>
                
                <div class="clearfix botoes">
                    <button type="submit" class="pull-right" id="btnConfirmar" style="margin-bottom: 20px;">Confirmar</button>
                    <button type="button" onclick="location.href='@Url.Action("Index", "Entrevistas")'" class="pull-right" id="btnVoltar">Voltar</button>
                </div>
            </div>
        </form>       
    </div>
    <div class="col-md-8 col-lg-8">
        <div class="sec-title">
            <span class="glyphicon glyphicon-comment"></span><strong> Entrevistas Marcadas:</strong>
            <div class="pull-right">
                <a typeof="button" data-target="#marcarEntrevista" data-toggle="modal" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span> Marcar Entrevista</a>
            </div>
        </div>
        <br />
        <div class="table-responsive">
            <table class="table table-striped table-bordered" id="tabela-entrevistas">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(Model => Model.DataEntrevista)
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model.HoraEntrevista)
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model.Estado)
                        </th>
                        <th class="no-sort"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(Model => Model.DataEntrevista)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => Model.HoraEntrevista)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => Model.Estado.Nome)
                        </td>
                        <td class="text-center">
                            <a asp-action="#" asp-controller="Entrevistas" asp-route-id="1">Detalhes</a>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayFor(Model => Model.DataEntrevista)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => Model.HoraEntrevista)
                        </td>
                        <td>
                            @Html.DisplayFor(Model => Model.Estado.Nome)
                        </td>
                        <td class="text-center">
                            <a asp-action="#" asp-controller="Entrevistas" asp-route-id="1">Adiar</a> |
                            <a asp-action="#" asp-controller="Entrevistas" asp-route-id="1">Avaliar</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</fieldset>





    