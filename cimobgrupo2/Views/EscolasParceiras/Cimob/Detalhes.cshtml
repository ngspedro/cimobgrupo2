@model cimobgrupo2.Models.EscolaParceira
@{
    ViewData["Titulo"] = "Detalhes de Escola Parceira";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-3 col-lg-3 left-info">
    <table id="table-info">
        <tr>
            <td><strong>Escola Parceira: </strong></td>
            <td>@Html.DisplayFor(model => model.Nome)</td>
        </tr>
        <tr>
            <td><strong>@Html.DisplayNameFor(model => model.Pais): </strong></td>
            <td>@Html.DisplayFor(model => model.Pais)</td>
        </tr>
        <tr>
            <td><strong>@Html.DisplayNameFor(model => model.Localidade): </strong></td>
            <td>@Html.DisplayFor(model => model.Localidade)</td>
        </tr>

    </table>
</div>

<div class="col-md-9 col-lg-9">
    <div class="sec-title" style="margin-bottom: 10px;"><span class="glyphicon glyphicon-book"></span><strong> Cursos Disponíveis:</strong></div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered" id="tabela-cursos">
            <thead>
                <tr>
                    <th>
                        Nome
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cursos.ToList())
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Curso.Nome)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="col-md-12 col-lg-12" style="margin-top: 15px;">
    <a type="button" href="@Url.Action("RemoverModal", "EscolasParceiras", new { Id = Model.EscolaParceiraId })" data-target="#removerEscola" data-toggle="modal" class="button pull-right" id="btnEliminar">Eliminar</a>
    <button type="button" onclick="location.href='@Url.Action("Editar", "EscolasParceiras", new { Id = Model.EscolaParceiraId })'" class="pull-right" id="btnEditar">Editar</button>
    <button type="button" onclick="javascript:history.back(); return false;" class="pull-right" id="btnVoltar" style="margin-bottom: 20px;">Voltar</button>
</div>

<div class="modal fade" id="removerEscola" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#tabela-cursos').DataTable({
            "language": {
                "url": "/lib/DataTables/pt.json"
            },
            "searching": false,
            "pageLength": 5,
            "bLengthChange": false,
            "bFilter": true,
            "bAutoWidth": false
        });
    });
</script>