@model cimobgrupo2.Models.Programa

@{
    ViewData["Titulo"] = "Novo Programa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-action="Adicionar" method="post" enctype="multipart/form-data">
    <div class="col-md-3 col-lg-3">

        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>:
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Duracao" class="control-label"></label>:
            <input asp-for="Duracao" class="form-control" />
            <span asp-validation-for="Duracao" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Edital" class="control-label"></label>:
            <input id="input-edital" name="file" type="file" class="file" data-show-preview="false">
            <span asp-validation-for="Edital" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Descricao" class="control-label"></label>:
            <textarea asp-for="Descricao" class="form-control" style="min-height: 240px"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-12 col-lg-12 botoes">
        <button type="submit" class="pull-right" id="btnConfirmar" style="margin-bottom: 20px;">Confirmar</button>
        <button type="button" onclick="location.href='@Url.Action("Index", "Programas")'" class="pull-right" id="btnVoltar">Voltar</button>
    </div>
</form>

<script>
    $("#input-edital").fileinput({
        'showUpload': false, language: "pt"
    });
</script>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}