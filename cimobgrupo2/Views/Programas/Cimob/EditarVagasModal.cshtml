@model cimobgrupo2.Models.ProgramaEscolaParceira

<form class="form-horizontal" role="form" asp-action="EditarVagas" method="POST" id="editarVagasForm">
        <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Editar Vagas</h4>
            </div>
    <div class="modal-body">

        <input type="hidden" asp-for="ProgramaId" />
        <input type="hidden" asp-for="EscolaParceiraId" />
        <div class="form-group">
            <div class="col-md-12 col-lg-12">
                <label class="control-label">Programa:</label>
                <input asp-for="Programa.Nome" class="form-control" disabled />
            </div>
        </div>
        <div class="form-group ">
            <div class="col-md-12 col-lg-12">
                <label class="control-label">Escola Parceira:</label>
                <input asp-for="EscolaParceira.Nome" class="form-control" disabled />
                </div>
            </div>
        <div class="form-group ">
            <div class="col-md-12 col-lg-12">
                <label class="control-label">Número de Vagas:</label>
                <input asp-for="NumeroVagas" class="form-control" />
            </div>
        </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                <button id="btnConfirmar" type="submit" class="btn btn-primary">Confirmar</button>
            </div>
</form>
