@using Microsoft.AspNetCore.Identity
@using cimobgrupo2.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    String tituloModal = "Ajuda";
    String textoModal = "Esta página não tem ajuda disponível.";
    if (ViewData["TextoModalAjuda"] != null)
    {
        tituloModal += " - " + ViewData["TituloModalAjuda"];
        textoModal = (String)ViewData["TextoModalAjuda"];
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CIMOB</title>

    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap-3.3.7-dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/jquery-ui-1.12.1/jquery-ui.min.css" />
    <link rel="stylesheet" type="text/css" href="~/styles/main.css">

    <script src="~/lib/jquery-3.2.1/jquery-3.2.1.min.js"></script>
    <script src="~/lib/jquery-ui-1.12.1/jquery-ui.min.js"></script>
    <script src="~/lib/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
</head>
<body>
    <a href="@Url.Action("Index", "Home")"><img id="logo" src="~/images/logo.png" alt="logo" /></a>
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <ul class="nav navbar-nav custom">
                    <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-home"></span> Home</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-plane"></span> Programas</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-paperclip"></span> Minha Candidatura</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Index", "Manage")"><span class="glyphicon glyphicon-user"></span> @UserManager.GetUserName(User)</a></li>
                    <li><a href="#" onclick="logoutForm.submit();"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
                </ul>
            </div>
        </nav>
    </form>
    <div class="container-fluid" id="conteudo">
        <img src="~/images/help2.png" class="icon help" data-toggle="modal" data-target="#ModalAjuda"/>
        <h1>@ViewData["titulo"]</h1>
        @RenderBody()
    </div>

    <div id="ModalAjuda" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">@tituloModal</h4>
                        </div>
                        <div class="modal-body">
                            <p>@Html.Raw(textoModal)</p>
                        </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="~/js/site.js"></script>
</body>
</html>
