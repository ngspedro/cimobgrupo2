<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CIMOB</title>

    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap-3.3.7-dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/lib/jquery-ui-1.12.1/jquery-ui.min.css" />
    <link rel="stylesheet" type="text/css" href="~/styles/autenticacao.css">
    
    <script src="~/lib/jquery-3.2.1/jquery-3.2.1.min.js"></script>
    <script src="~/lib/jquery-ui-1.12.1/jquery-ui.min.js"></script>
    <script src="~/lib/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    
    <script src="~/js/site.js"></script>
</head>
<body>
    <div id="topo">
        <h1>@ViewData["Topo"] </h1>
        <a href="@Url.Action("Login", "Account")"><img id="logo" src="~/images/logo.png" alt="logo" /></a>
    </div>
    <div id="autenticacao">
        <div id="form">
            <div asp-validation-summary="All" class="text-danger"></div>
            @RenderBody()
        </div>
        <img src="~/images/autenticacao.png" />
    </div>
</body>
</html>
